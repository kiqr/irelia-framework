<!DOCTYPE html>
<html>
  <head>
    <%= render "shared/head" %>
    <style type="text/css">
      form abbr[title] { display: none; }
    </style>
  </head>
  <body class="h-screen relative flex justify-center items-cente antialiased text-neutral-700 bg-neutral-50 dark:bg-dark-900">
    <section class="flex flex-col gap-8 items-center justify-center w-full max-w-xl">
      <header class="flex flex-col items-center gap-y-2 text-center">
        <%= yield :header %>
      </header>

      <% if alert %>
        <div class="bg-white py-2 px-4 inline-block text-center w-full rounded shadow font-headings text-rose-500">
          <%= alert %>
        </div>
      <% end %>

      <main class="flex flex-col gap-4 w-full">
        <%= yield %>
      </main>
    </section>
  </body>
</html>
